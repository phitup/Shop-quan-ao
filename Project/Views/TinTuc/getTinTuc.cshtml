@model IEnumerable<Project.Models.News>

          


                @foreach (var item in Model)
                {
                    var UrlProduct = "/tin-tuc/" + item.meta;
                    <div class="top_grid2">
                        <div class="col-md-4 top_grid1-box1 product1">
                            <!--<a href="ProductDetail?productID=item.id">-->
                            <a href="@UrlProduct">
                                <div class="grid_1">
                                    <div class="b-link-stroke b-animate-go thickbox">
                                        <img src="~/images/@item.img" class="img-responsive" alt="Nghệ Thuật" />
                                    </div>
                                    <div class="grid_2">
                                        <p>@item.name</p>
                                        <ul class="grid_2-bottom">
                                            <li>@item.description</li>
                                            <div class="clearfix"></div>
                                        </ul>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            
 