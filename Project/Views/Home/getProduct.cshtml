@model List<Project.Models.product>
@{ 
    ViewBag.Title = "getProduct";
}

@foreach (var item in Model)
{        
        <div class="top_grid2">
            <div class="col-md-4 top_grid1-box1">
                <a href="http://localhost:62394/Home/Single/ ">
                    <div class="grid_1">
                        <div class="b-link-stroke b-animate-go thickbox">
                            <img src="images/@item.img" class="img-responsive" alt="Nghệ Thuật" />
                        </div>
                        <div class="grid_2">
                            <p>@item.name</p>
                            <ul class="grid_2-bottom">
                                <li class="grid_2-left"><p>@item.price<small> VND</small></p></li>
                                <li class="grid_2-right"><div class="btn btn-primary btn-normal btn-inline" target="_self" title="BUY">BUY</div></li>
                                <div class="clearfix"></div>
                            </ul>
                        </div>
                    </div>
                </a>
            </div>        
            <div class="clearfix"> </div>
        </div>
        

}
