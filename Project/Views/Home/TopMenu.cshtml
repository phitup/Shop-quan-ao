@model IEnumerable<Project.Models.menu>

@{
    ViewBag.Title = "TopMenu";
}

@foreach (var menu in Model)
{
    
    <ul class="nav" style="display:inline-block;">

        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Home" ? "active" : "")" style="display:inline-block;">
            <a href="/@menu.meta">
                @menu.name
            </a>
        </li>
    </ul>
}

