@model Project.Models.News

@{
    ViewBag.Title = "NewsDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:1485px;height:1000px;background-color:#eee;">
    <div style="float:left;width:30%;height:300px;padding:40px 10px 0 40px;">
        <img src="~/images/@Model.img" style="padding:15px;width:100%;height:100%;" />
    </div>
    <div style="float:right;width:67%;height:100%;border-left:1px solid #00ff21;padding:20px 20px 0 20px;">
        <h2 style="padding:15px;">@Model.name</h2>
        <hr style="display: block;height: 1px;border: 0;border-top: 1px solid #ccc; margin: 1em 0; padding: 0; width:50%;" />
        <br />
        <div style="width:100%;height:100%">
            <p>@Model.detail</p>
        </div>
    </div>
</div>

