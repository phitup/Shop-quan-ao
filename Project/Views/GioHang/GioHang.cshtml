@using Project.Models
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default" style="border:1px solid #4800ff;">
            <div class="panel-heading" style="background-color:#4800ff;">
                Giỏ Hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <td>Mã Sách</td>

                            <td>Tên Sách</td>

                            <td>Hình Ảnh</td>

                            <td>Đơn Giá</td>

                            <td>Số Lượng</td>

                            <td>Thành Tiền</td>

                        </tr>
                    </thead>
                    <tbody>
                        @{var rowNo = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.Raw(rowNo++)</td>
                                <td>@item.iMaSP</td>

                                <td style="text-align:left; white-space:nowrap">@item.sTenSP</td>

                                <td><img src="~/images/@item.sHinhAnh" style="width:100px;height:100px;" /></td>

                                <td>@item.dDonGia</td>

                                <td>@item.iSoLuong</td>

                                <td>@item.ThanhTien</td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->