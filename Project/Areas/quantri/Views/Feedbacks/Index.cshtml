@using Project.Help
@model IEnumerable<Project.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/quantri/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    th, td {
        text-align: center;
    }

        td p {
            height: 50px;
            overflow-y: hidden;
            text-overflow: ellipsis;
        }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default" style="border:1px solid deeppink;">
            <div class="panel-heading" style="background-color:deeppink;">
                Danh sách Feedback
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th style="width:50px;">
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th style="width:50px;">
                                @Html.DisplayNameFor(model => model.email)
                            </th>
                            <th style="width:300px;">
                                @Html.DisplayName("Content")
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{var rowNo = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @Html.Raw(rowNo++)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.C_content)
                                </td>
                                <td>
                                    @(item.status == false ? "Đã Duyệt" : "Chưa Duyệt")

                                </td>
                                <td>
                                    @if (item.status == true)
                                    {
                                        @Html.ActionLink("Huỷ Bỏ", "Edit", new { id = item.id }) ;
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Duyệt", "Edit", new { id = item.id });
                                    }
                                    | @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "Feedbacks", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "Feedbacks", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
