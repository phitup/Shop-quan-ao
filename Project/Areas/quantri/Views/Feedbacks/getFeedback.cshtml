@using Project.Help
@model IEnumerable<Project.Models.Feedback>

<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
        <tr>
            <th>No.</th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th style="width:120px;">
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th style="width:400px;">
                @Html.DisplayName("Content")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var rowNo = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.Raw(rowNo++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C_content)
                </td>
                <td>
                    @(item.status.GetValueOrDefault(false) ? "Đã Duyệt" : "Chưa Duyệt")
                </td>
                <td>
                    @Html.ActionLink("Duyệt", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>