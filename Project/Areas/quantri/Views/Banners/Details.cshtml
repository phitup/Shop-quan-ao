@model Project.Models.Banner

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/quantri/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    dt {
        padding-top: 10px;
    }

    dd {
        padding-top: 10px;
    }

    p {
        height: 100px;
        margin: 20px;
        display: inline;
    }

    .sua {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .sua:hover {
            background-color: lightgray;
            color: black;
        }

        .sua a {
            padding-top: 5px;
            color: white;
        }

    .quayve {
        height: 30px;
        width: 40px;
        text-align: center;
        background-color: deeppink;
        display: inline;
        padding: 10px;
        position: relative;
        top: -20px;
    }

        .quayve:hover {
            transition: .4s;
            background-color: lightgray;
            color: black;
        }

        .quayve a {
            padding-top: 5px;
            color: white;
        }

    .abc {
        display: inline;
        position: relative;
        top: -18px;
        font-size: 30px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chi Tiết Sản Phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.img)
                    </dt>

                    <dd>
                        <img src="~/Content/upload/img/product/@Model.img" style="width:20% ; height:auto" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt>
                        @Html.DisplayName("Ché Độ")
                    </dt>

                    <dd>
                        @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.meta)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.meta)
                    </dd>

                </dl>
            </div>
            <p>
                <div class="sua">
                    @Html.ActionLink("Sửa", "Edit", new { id = Model.id })
                </div>
                <div class="abc">
                    |
                </div>
                <div class="quayve">
                    @Html.ActionLink("Quay Lại", "Index")
                </div>
            </p>
        </div>
    </div>
</div>